<?xml version="1.0" encoding="UTF-8"?> 

<component xmlns="http://www.accellera.org/XMLSchema/IPXACT/1685-2014" 

xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 

xsi:schemaLocation="http://www.accellera.org/XMLSchema/IPXACT/1685-2014"> 

 
 

<vendor>mycompany.com</vendor> 

<library>SoC_Components</library> 

<name>Enhanced_Register_Bank</name> 

<version>1.1</version> 

 
 

<busInterfaces> 

<busInterface> 

<name>APB</name> 

<busType vendor="arm.com" library="AMBA" name="APB" version="r0p0"/> 

<target> 

<memoryMapRef>reg_map</memoryMapRef> 

</target> 

</busInterface> 

</busInterfaces> 

 
 

<memoryMaps> 

<memoryMap> 

<name>reg_map</name> 

<!-- IP_A: UART Controller --> 

<addressBlock> 

<name>UART</name> 

<baseAddress>0x40000000</baseAddress> 

<range>0x1000</range> 

<width>32</width> 

<register> 

<name>CTRL_REG</name> 

<addressOffset>0x00</addressOffset> 

<size>32</size> 

<access>read-write</access> 

<field> 

<name>TX_EN</name> 

<bitOffset>0</bitOffset> 

<bitWidth>1</bitWidth> 

<enumeratedValues> 

<enumeratedValue> 

<name>OFF</name> 

<value>0</value> 

</enumeratedValue> 

<enumeratedValue> 

<name>ON</name> 

<value>1</value> 

</enumeratedValue> 

</enumeratedValues> 

<vendorExtensions> 

<connectTo>uart_tx_enable</connectTo> 

</vendorExtensions> 

</field> 

<field> 

<name>RX_EN</name> 

<bitOffset>1</bitOffset> 

<bitWidth>1</bitWidth> 

<enumeratedValues> 

<enumeratedValue> 

<name>OFF</name> 

<value>0</value> 

</enumeratedValue> 

<enumeratedValue> 

<name>ON</name> 

<value>1</value> 

</enumeratedValue> 

</enumeratedValues> 

<vendorExtensions> 

<connectTo>uart_rx_enable</connectTo> 

</vendorExtensions> 

</field> 

<field> 

<name>BAUD_DIV</name> 

<bitOffset>8</bitOffset> 

<bitWidth>8</bitWidth> 

<vendorExtensions> 

<connectTo>uart_baud_div</connectTo> 

</vendorExtensions> 

</field> 

</register> 

<register> 

<name>STATUS_REG</name> 

<addressOffset>0x04</addressOffset> 

<size>32</size> 

<access>read-only</access> 

<field> 

<name>TX_FULL</name> 

<bitOffset>0</bitOffset> 

<bitWidth>1</bitWidth> 

<enumeratedValues> 

<enumeratedValue> 

<name>NOT_FULL</name> 

<value>0</value> 

</enumeratedValue> 

<enumeratedValue> 

<name>FULL</name> 

<value>1</value> 

</enumeratedValue> 

</enumeratedValues> 

<vendorExtensions> 

<connectTo>uart_tx_full</connectTo> 

</vendorExtensions> 

</field> 

<field> 

<name>RX_EMPTY</name> 

<bitOffset>1</bitOffset> 

<bitWidth>1</bitWidth> 

<enumeratedValues> 

<enumeratedValue> 

<name>NOT_EMPTY</name> 

<value>0</value> 

</enumeratedValue> 

<enumeratedValue> 

<name>EMPTY</name> 

<value>1</value> 

</enumeratedValue> 

</enumeratedValues> 

<vendorExtensions> 

<connectTo>uart_rx_empty</connectTo> 

</vendorExtensions> 

</field> 

</register> 

</addressBlock> 

<!-- IP_B: PWM Controller --> 

<addressBlock> 

<name>PWM</name> 

<baseAddress>0x40001000</baseAddress> 

<range>0x1000</range> 

<width>32</width> 

<register> 

<name>PERIOD_REG</name> 

<addressOffset>0x00</addressOffset> 

<size>32</size> 

<access>read-write</access> 

<field> 

<name>PERIOD</name> 

<bitOffset>0</bitOffset> 

<bitWidth>32</bitWidth> 

<vendorExtensions> 

<connectTo>pwm_period</connectTo> 

</vendorExtensions> 

</field> 

</register> 

<register> 

<name>DUTY_REG</name> 

<addressOffset>0x04</addressOffset> 

<size>32</size> 

<access>read-write</access> 

<field> 

<name>DUTY_CYCLE</name> 

<bitOffset>0</bitOffset> 

<bitWidth>32</bitWidth> 

<vendorExtensions> 

<connectTo>pwm_duty</connectTo> 

</vendorExtensions> 

</field> 

</register> 

</addressBlock> 

</memoryMap> 

</memoryMaps> 

</component> 